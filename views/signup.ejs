<%- include("./parts/header.ejs")%>

<form action="/signup" method="POST" class="signup-form container text-center">
    <h2 class="signup-form-header text-center mb-3">Sign Up</h2>
    <input class="form-control mb-2" type="text" name="username" placeholder="username">
    <input class="form-control mb-2" type="email" name="email" placeholder="email">
    <input class="form-control mb-2" type="password" name="password" placeholder="passowrd">
    <input type="submit" value="Signup" class="btn btn-primary mt-3">
    <br>
    <span class="mt-3">I already have an account, <a href="/login">Login</a></span>
</form>

